extends layout

block content
  include barre_menu
  
  .row
    div(class='col-xs-12 col-sm-12 col-md-8 col-lg-8')
        table(class='table table-condensed')
          - for i in modules
             - var usage = i.Used;
             
             if( usage ===1)
                tr
                  td(style="vertical-align:top;")
                    h6 #{i.idx}
                  td(style="vertical-align:middle;")
                    small
                      p #{i.Name}
                      p
                        small #{i.SubType}
                    
                  td
                     button(class='btn btn-success btn-lg btnaction', typebtn='on', name='#{i.idx}')
                       span(class='glyphicon glyphicon-ok-circle')
                  td
                     button(class='btn btn-danger btn-lg btnaction', typebtn='Off', name='#{i.idx}')
                       span(class='glyphicon glyphicon-remove-circle')

                
     div(class='zlog col-lg-4 col-md-4 hidden-xs hidden-sm bg-primary') Droite
